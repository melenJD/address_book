<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header.ejs') %>
</head>
<body>
  <%- include('../partials/nav.ejs') %>
  
  <div class="contact contact-edit">
    <h2>Edit</h2>
    <form action="/contacts/<%= contact._id %>?_method=put" class="contact-form" method="POST">
      <div>
        <label for="name">이름</label>
        <input type="text" name="name" id="name" value="<%= contact.name %>">
      </div>
      <div>
        <label for="age">나이</label>
        <input type="number" name="age" id="age" value="<%= contact.age %>">
      </div>
      <div>
        <label for="email">이메일</label>
        <input type="text" name="email" id="email" value="<%= contact.email %>">
      </div>
      <div>
        <label for="address">주소</label>
        <input type="text" name="address" id="address" value="<%= contact.address %>">
      </div>
      <div>
        <input type="submit" value="전송">
      </div>
    </form>
  </div>
</body>
</html>